# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=5000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# JWT Secret (Generate a strong random secret)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY

# Database Configuration - TiDB Cloud
DB_HOST=gateway01.ap-southeast-1.prod.aws.tidbcloud.com
DB_PORT=4000
DB_USER=your-tidb-username
DB_PASSWORD=your-tidb-password
DB_NAME=frontend_test_portal

# TiDB SSL Certificate (Required for TiDB Cloud)
DB_CA_CERT="-----BEGIN CERTIFICATE-----\nYOUR_CERTIFICATE_HERE\n-----END CERTIFICATE-----"
DB_SSL_REJECT_UNAUTHORIZED=false

# Fallback to JSON storage if database unavailable
USE_JSON=false

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:80,https://yourdomain.com

# Security Notes:
# 1. Never commit .env file to Git
# 2. Use strong, random JWT_SECRET (at least 32 characters)
# 3. Rotate secrets regularly
# 4. Use environment-specific secrets for dev/staging/production
